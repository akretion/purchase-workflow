<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="purchase.product_product_action" model="ir.actions.act_window">
        <field name="name">Purchase Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base_product_mass_addition.product_product_tree_view"/>
        <field name="search_view_id" ref="base_product_mass_addition.product_search_form_view"/>
        <field name="domain">[]</field>
        <field name="context">{"search_default_filter_to_purchase":1,
            "search_default_filter_for_current_supplier":1,
            }</field>
    </record>

    <record id="open_view_product_tree2" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base_product_mass_addition.product_product_tree_view"/>
        <field name="act_window_id" ref="purchase.product_product_action"/>
    </record>


</odoo>
