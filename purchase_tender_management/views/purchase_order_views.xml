<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_line_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.tree for Bid selection</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <!-- Unused fields -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='qty_received']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='qty_invoiced']" position="attributes">
              <attribute name="invisible">True</attribute>
            </xpath> -->
            <!-- <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath> -->
            <!-- Rename UoM -->
            <xpath expr="//field[@name='product_uom']" position="attributes">
                <attribute name="string">UoM</attribute>
            </xpath>
            <!-- Tree decoration -->
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">bid_selection == "selected"</attribute>
                <attribute name="decoration-muted">bid_selection == "rejected"</attribute>
            </xpath>
            <!-- Bid selection fields -->
            <xpath expr="//field[@name='date_planned']" position="after">
              <field name="bid_selection" string="Bid"/>
              <button name="action_select_bid" type="object" icon="fa-check" string="Select" />
              <button name="action_reject_bid" type="object" icon="fa-times" string="Reject" />
            </xpath>
        </field>
    </record>

    <!-- Simplified tree view for Bid Selection confirmation wizard -->
    <record id="purchase_order_line_bid_wizard_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.tree for Bid selection Wizard</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_tender_management.purchase_order_line_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <!-- Hide bid selection fields -->
            <xpath expr="//field[@name='bid_selection']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//button[@name='action_select_bid']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//button[@name='action_reject_bid']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <!-- Add sum=Total -->
            <xpath expr="//field[@name='price_subtotal']" position="attributes">
                <attribute name="sum">Total</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_line_search" model="ir.ui.view">
      <field name="name">purchase.order.line.search for Bid Selection</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_search"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
          <xpath expr="//filter[@name='groupby_supplier']" position="before">
              <filter name="groupby_bid_selection" string="Bid Selection" context="{'group_by' : 'bid_selection'}" />
          </xpath>
      </field>
    </record>

    <record id="action_confirm_bid_selection" model="ir.actions.server">
        <field name="name">Confirm Bid Selection</field>
        <field name="model_id" ref="purchase_tender_management.model_purchase_order_line"/>
        <field name="binding_model_id" ref="purchase_tender_management.model_purchase_order_line"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_bid_selection()
        </field>
    </record>

</odoo>
